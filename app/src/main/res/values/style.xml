<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <style name="Theme.BBS.circle_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.BBS.clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="corner_bottom_sheet_dialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/corner_bottom_sheet_dialog_shape</item>
    </style>

    <style name="corner_bottom_sheet_dialog_shape" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/corner_bottom_sheet_dialog_val</item>
    </style>

    <style name="corner_bottom_sheet_dialog_val" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>